                    </StackPanel>
                </ListViewItem>

            </ListView>
            <ListView CanReorderItems="False" CanDragItems="False" AllowDrop="True"
                        Canvas.Left="660" Canvas.Top="165" Width="640" Height="417"
                        SelectionMode="Multiple" RenderTransformOrigin="0.874,0.556">
                <ListViewItem Width="653" Height="214" >
                    <StackPanel Orientation="Horizontal" Height="218">
                        <Image Source="/Bilder/Walnüsse.jpeg" Width="140" Height="140" />
                        <TextBlock Margin="10 0 0 0 " FontSize="40" Height="78" Width="271">Walnüsse</TextBlock>
                        <Button Content="Mehr Informationen" Canvas.Left="160" Canvas.Top="717" Height="40" Width="180" Click="Walnuss_Click"/>
                    </StackPanel>
                </ListViewItem>
                <ListViewItem Width="656" Height="210" >
                    <StackPanel Orientation="Horizontal" Height="218">
                        <Image Source="/Bilder/Sonnenblumenkerne.jpeg" Width="137" Height="161" />
                        <TextBlock Margin="10 0 0 0 " FontSize="30" Height="55" Width="282" >Sonnenblumenkerne</TextBlock>
                        <Button Content="Mehr Informationen" Canvas.Left="160" Canvas.Top="717" Height="40" Width="180" Click="SonnenK_Click"/>
                    </StackPanel>
                </ListViewItem>
                <ListViewItem Width="647" Height="207" >
                    <StackPanel Orientation="Horizontal" Height="218">
                        <Image Source="/Bilder/Basilikum.jpeg" Width="140" Height="191" />
                        <TextBlock Margin="10 0 0 0 " FontSize="40" Height="78" Width="278">Basilikum</TextBlock>
                        <Button Content="Mehr Informationen" Canvas.Left="160" Canvas.Top="717" Height="40" Width="180" Click="Basilikum_Click"/>
                    </StackPanel>
                </ListViewItem>
            </ListView>

            <TextBox x:Name="Info3"  TextWrapping="Wrap" Canvas.Left="30" Canvas.Top="587" Width="962" Height="142" FontSize="22"/>

        </Canvas>
        <ProgressBar HorizontalAlignment="Center" Height="60" Margin="0,823,0,0" VerticalAlignment="Top" Width="204" Maximum="8" Minimum="0" Value="3" Background="AntiqueWhite"  Foreground="Black"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,790,0,0" Text="3/8" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" Width="48" FontSize="25"/>
