    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyBread1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button Content="weiter" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,875,63,0" Click="Navigiere_zuWarenkorb"  Height="57" Width="290"></Button>
        <TextBlock HorizontalAlignment="Left" Margin="570,76,0,0" Text="Bestellungsoptionen" TextWrapping="Wrap" VerticalAlignment="Top" Height="76" Width="381" FontSize="40"/>

        <TextBlock HorizontalAlignment="Left" Margin="90,184,0,0" Text="Wann möchten sie ihr Brot abholen?" TextWrapping="Wrap" VerticalAlignment="Top" Height="59" Width="432" FontSize="25"/>
        <RadioButton Content="RadioButton" Margin="206,552,0,0" VerticalAlignment="Top" Height="48" Width="445"/>
        <CalendarDatePicker Margin="90,255,0,0" VerticalAlignment="Top" Height="75" Width="171" />
        <ProgressBar HorizontalAlignment="Left" Height="60" Margin="651,742,0,0" VerticalAlignment="Top" Width="204" x:Name="Progressbar" Maximum="8" Minimum="0" Value="6" Background="DarkOliveGreen"  Foreground="Black"/>
